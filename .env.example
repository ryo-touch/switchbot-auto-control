# SwitchBot API Settings
# SwitchBotアプリの開発者設定から取得
SWITCHBOT_TOKEN=your_switchbot_token_here
SWITCHBOT_SECRET=your_switchbot_secret_here

# Device Settings
# SwitchBot APIで取得したエアコンのデバイスID
AIRCON_DEVICE_ID=your_aircon_device_id_here

# Location Settings
# 自宅の緯度・経度（例: 35.6762, 139.6503）
HOME_LATITUDE=35.6762
HOME_LONGITUDE=139.6503

# Trigger Settings
# エアコン制御をトリガーする距離（メートル）
TRIGGER_DISTANCE=100

# Debug Settings (optional)
DEBUG_MODE=false
